{
  "compilerOptions": {
    "module": "ES6",
    "moduleResolution": "node",
    "target": "ES6",
    "lib": ["ES2016"],
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "sourceMap": false,
    "skipLibCheck": true,
    // Set declaratoin to true when creating a module.
    "declaration": true
  },
  "include": ["src"]
}
